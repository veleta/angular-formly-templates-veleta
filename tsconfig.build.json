{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "baseUrl": "src",
    "outDir": "lib/src",
    "paths": {},
    "lib": ["dom", "es6"],
    "importHelpers": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "angularCompilerOptions": {
    "genDir": "lib",
    "strictMetadataEmit": true
  }
}
