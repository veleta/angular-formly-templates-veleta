{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "lib",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "types" : ["node", "jasmine"]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*",
    "spec/**/*"
  ],
  "compileOnSave": false
}
